<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LineChartBillMonthly">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_title"
        android:background="@color/colorPrimaryDark"
        android:layout_height="55dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:text="Billing"/>
        <ImageView
            android:layout_width="55dp"
            android:src="@drawable/leftarrow"
            android:padding="14dp"
            android:id="@+id/img_back"
            android:layout_marginLeft="10dp"
            android:layout_height="55dp" />
        <ImageView
            android:layout_width="55dp"
            android:src="@drawable/menu_option"
            android:padding="17dp"
            android:id="@+id/img_option"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_height="55dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/rl_title"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewWatts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:rotation="-90"
            android:text="$"
            android:textColor="@color/yellow"
            android:textSize="15dp" />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_toRightOf="@+id/textViewWatts"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.LineChart>
    </RelativeLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
        android:id="@+id/ll_bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/monthly"
            android:onClick="onClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/home"
            android:textColor="#000000"
            android:onClick="backtodashboard"
            android:id="@+id/backtoDash"/>
    </LinearLayout>


</RelativeLayout>